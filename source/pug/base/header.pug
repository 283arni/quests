mixin header(headerMod, currentPage)
  -
    var headerLinks = [
      {
        href: "#",
        text: "квесты"
      },
      {
        href: "#",
        text: "новичкам"
      },
      {
        href: "#",
        text: "отзывы"
      },
      {
        href: "#",
        text: "акции"
      },
      {
        href: "#",
        text: "контакты"
      },
    ]

  header(class=(headerMod) ? "header header_" + headerMod: "header")
    .header__wrapper
      if(currentPage === "main")
        a.header__logo
          +icon("logo-group", 134, 50)
      else
        a.header__logo(href="main.html", aria-label="Переход на главную")
          +icon("logo-group", 134, 50)
      nav.nav
        button.nav__menu.btn-reset(type="button", aria-label="Переключатель отображения меню", aria-pressed="false")
          +icon("icon-burger", 20, 20)
        ul
          each link, index in headerLinks
            li
              a(href=link.href)=link.text
